<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="conteiner">
    <div class="row">
      <div class="mx-auto">
        <label class="col-2">名前</label>
        <div class="form-row col-10">
          <div class="col-6">
            <div class="field">
              <%= f.label :last_name, "（姓）" %>
              <%= f.text_field :last_name, class: "form-control" %>
            </div>
          </div>
          <div class="col-6">
            <div class="field">
              <%= f.label :first_name, "（名）"  %>
              <%= f.text_field :first_name, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="form-row col-10">
          <div class="col-6">
            <div class="field">
              <%= f.label :last_name_kana, "（セイ）" %>
              <%= f.text_field :last_name_kana, class: "form-control" %>
            </div>
          </div>
          <div class="col-6">
            <div class="field">
              <%= f.label :first_name_kana, "（メイ）"  %>
              <%= f.text_field :first_name_kana, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field">
          <%= f.label :postcode %>
        </div>



        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
        <% end %>

    </div>
  </div>
</div>

<%= render "public/shared/links" %>
